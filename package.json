{
  "name": "ai-job-portal",
  "version": "1.0.0",
  "private": true,
  "description": "AI Job Portal - NestJS Microservices",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --concurrency=20",
    "dev:gateway": "turbo run dev --filter=api-gateway",
    "dev:auth": "turbo run dev --filter=auth-service",
    "dev:user": "turbo run dev --filter=user-service",
    "dev:job": "turbo run dev --filter=job-service",
    "dev:application": "turbo run dev --filter=application-service",
    "dev:notification": "turbo run dev --filter=notification-service",
    "dev:payment": "turbo run dev --filter=payment-service",
    "dev:admin": "turbo run dev --filter=admin-service",
    "dev:messaging": "turbo run dev --filter=messaging-service",
    "dev:recommendation": "turbo run dev --filter=recommendation-service",
    "dev:all": "turbo run dev",
    "dev:core": "(pnpm run kill-ports || exit 0) && turbo run dev --filter=api-gateway --filter=auth-service --filter=user-service --filter=job-service --filter=application-service",
    "kill-ports": "for /L %i in (3000,1,3010) do (for /f \"tokens=5\" %a in ('netstat -aon ^| findstr \":%i\"') do taskkill /F /PID %a) 2>nul || exit 0",
    "clean:run": "(pnpm run kill-ports || exit 0) && pnpm run dev:core",
    "dev:swagger": "npx http-server swagger-portal -p 8089 --cors -c-1",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:auth": "turbo run test:e2e --filter=auth-service",
    "test:e2e:user": "turbo run test:e2e --filter=user-service",
    "test:e2e:job": "turbo run test:e2e --filter=job-service",
    "test:e2e:application": "turbo run test:e2e --filter=application-service",
    "test:e2e:gateway": "turbo run test:e2e --filter=api-gateway",
    "test:e2e:payment": "turbo run test:e2e --filter=payment-service",
    "test:e2e:notification": "turbo run test:e2e --filter=notification-service",
    "test:e2e:messaging": "turbo run test:e2e --filter=messaging-service",
    "test:e2e:admin": "turbo run test:e2e --filter=admin-service",
    "test:e2e:recommendation": "turbo run test:e2e --filter=recommendation-service",
    "db:generate": "turbo run db:generate --filter=@ai-job-portal/database",
    "db:push": "turbo run db:push --filter=@ai-job-portal/database",
    "seed:rbac": "pnpm --filter admin-service exec ts-node -r tsconfig-paths/register src/rbac/seed-rbac.ts",
    "seed:templates": "pnpm --filter admin-service exec ts-node -r tsconfig-paths/register src/resume-templates/seed-resume-templates.ts",
    "env:local": "node scripts/switch-env.js local",
    "env:live": "node scripts/switch-env.js live",
    "env:status": "node scripts/switch-env.js",
    "docker:up": "docker-compose --env-file docker/.env.docker -f docker/docker-compose.yml up -d redis localstack",
    "docker:down": "docker-compose --env-file docker/.env.docker -f docker/docker-compose.yml down",
    "docker:build": "docker-compose --env-file docker/.env.docker -f docker/docker-compose.yml build",
    "docker:build:service": "docker build --build-arg SERVICE=$npm_config_service -t ai-job-portal-$npm_config_service .",
    "docker:start": "docker-compose --env-file docker/.env.docker -f docker/docker-compose.yml up -d",
    "docker:start:infra": "docker-compose --env-file docker/.env.docker -f docker/docker-compose.yml up -d redis localstack postgres",
    "docker:start:services": "docker-compose --env-file docker/.env.docker -f docker/docker-compose.yml up -d api-gateway auth-service user-service job-service application-service notification-service payment-service admin-service messaging-service recommendation-service",
    "docker:stop": "docker-compose --env-file docker/.env.docker -f docker/docker-compose.yml stop",
    "docker:logs": "docker-compose --env-file docker/.env.docker -f docker/docker-compose.yml logs -f",
    "docker:ps": "docker-compose --env-file docker/.env.docker -f docker/docker-compose.yml ps",
    "docker:tools": "docker-compose --env-file docker/.env.docker -f docker/docker-compose.yml --profile tools up -d redis-commander"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "8",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.3.0",
    "typescript-eslint": "^8.53.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "drizzle-kit": "^0.30.6",
    "drizzle-orm": "^0.38.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}

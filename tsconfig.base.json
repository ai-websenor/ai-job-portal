{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "ES2021"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16", // ✅ replace "node" / "node10" with modern
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".", // ✅ explicitly set
    "paths": {
      "@ai-job-portal/common": [
        "packages/common/src"
      ],
      "@ai-job-portal/common/": [
        "packages/common/src/"
      ],
      "@ai-job-portal/types": [
        "packages/types/src"
      ],
      "@ai-job-portal/types/": [
        "packages/types/src/"
      ],
      "@ai-job-portal/database": [
        "packages/database/src"
      ],
      "@ai-job-portal/database/": [
        "packages/database/src/"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/dist"
  ]
}